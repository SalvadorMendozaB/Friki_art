<!DOCTYPE html>
<html lang="en">
  <head>
    <%-include('../partials/head')%>
    <link rel="stylesheet" href="/stylesheets/detalleProducto.css" />
    <link rel="stylesheet" href="/stylesheets/estilos.css" />
    <link rel="stylesheet" href="/stylesheets/normalize.css" />
  </head>

  <style>
    a {
      text-decoration: none;
    }
  </style>
  <body>
    <header>
      <% if (locals.usuario) {%>
        <%-include('../partials/header', {usuario: usuario})%>
        <% } else {%>
        <%-include('../partials/header')%>
        <%}%>
    </header>

    <main>
      <div class="principalDiv">
        <img id="imgDetalle" src="/images/productos/<%= producto.image %>" alt="" />

        <br />
        <div id="listaDescripcion">
          <br />
          <div class="nombre"><%= producto.name %></div>
          <br />
          <div class="categoria">Categoria</div>
          <div class=""><p><%= producto.category_name %></p></div>
          <br />
          <p class="descripcion">
            <%= producto.description %>
          </p>
          <br />
          <div class="categoria">Marca</div>
          <div class=""><p><%= producto.brand_name %></p></div>
          <br />
          <div class="colores"><p>Colores</p>
            <div><p><%= producto.colors %></p></div>
       
        </div>
        </div>
        <br />
        <div id="listaBoton">
          <div class="contenedorCarrito">
            <div class="precio">$<%= producto.price %></div>
            <br />
            <button id="botonAñadir">Añadir al carrito</button>
          </div>

          <%if (locals.usuario && usuario.categoria == "administrador") {%>
          <div id="contenedorBotones">
            <a href="editarProducto/<%= producto.product_id %>"><button class="botonDetalle">Editar</button></a> 
            <form method="post" action="<%= producto.product_id %>?_method=DELETE">
              <button class="botonDetalle">Eliminar</button>
            </form>
          </div>
          <% } %>
        </div>
      </div>
    </main>
    <footer><%-include('../partials/footer')%></footer>
  </body>
</html>
