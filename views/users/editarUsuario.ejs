<!DOCTYPE html>
<html lang="en">
  <head>
    <%-include('../partials/head')%>
    <link rel="stylesheet" href="/stylesheets/estiloFormato.css" />
    <link rel="stylesheet" href="/stylesheets/estilos.css" />
    <link rel="stylesheet" href="/stylesheets/normalize.css" />
  </head>
    
    
  <body>
    <header>
        <% if (locals.usuario) {%>
            <%-include('../partials/header', {usuario: usuario})%>
            <% } else {%>
            <%-include('../partials/header')%>
            <%}%>
    </header>
    

    <article id="formato">
      <form method="POST"  action="/users/<%= usuarioEditar.user_id%>?_method=PUT" enctype="multipart/form-data">
        <strong>Nombre:</strong>
        <div><input class="campo" type="text" name="nombre" value="<%= usuarioEditar.name%>"></div><br>
        <strong>Apellido:</strong>
        <div><input class="campo" type="text" name="apellido" value="<%= usuarioEditar.last_name%>"> </div><br>
        <strong>Correo:</strong>
        <div><input class="campo" type="text" name="nombre_usuario" value="<%= usuarioEditar.username%>"></div><br>
        <strong>Apellido:</strong>
        <div><input class="campo" type="email" name="email" value="<%= usuarioEditar.email%>"> </div><br>
        <strong>Contraseña:</strong>
        <div><input class="campo" type="password" name="contraseña"> </div><br>
        <strong>Confirmar Contraseña:</strong>
        <div><input class="campo" type="password" name="confirmarPass"> </div><br>
        <strong>Categoria:</strong>
        <div>
        <select class="campo" name="categoria" id="categoria">
          <% categorias.forEach(categoria => { %>
            <option value="<%= categoria.user_category_id %>" <%= usuarioEditar.user_category_name == categoria.name ? 'selected' : '' %>> <%= categoria.name %> </option>
            <% }) %>
        </select>
      </div><br>
        <strong>Foto de perfil:</strong>
        <div><input class="campo" type="file" name="imagen"></div><br>
        <button class="boton" type="submit"><strong>Guardar</strong> </button>
      </form>
    </article>
    <footer>
      <%-include('../partials/footer')%>
    </footer>
    
  </body>
</html>
